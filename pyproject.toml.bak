[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "onetoken"
version = "0.1.0"
description = "A library for running local LLM classification tasks on data"
readme = "README.md"
requires-python = ">=3.8"
classifiers=[
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Topic :: Scientific/Engineering :: Artificial Intelligence",
    "Topic :: Software Development :: Libraries :: Python Modules",
    "Topic :: Utilities",
]
keywords = ["llm", "classification", "local", "inference", "vllm", "llama.cpp", "pandas", "ai", "nlp"]
dependencies = [
    "pandas>=1.3.0",
    "huggingface-hub>=0.17.0",
    "llama-cpp-python>=0.2.0",
]

[project.optional-dependencies]
gpu = ["vllm>=0.8.4"]
dev = [
    "pytest>=7.0.0",
    "black>=23.0.0",
    "isort>=5.0.0",
    "flake8>=5.0.0",
]
test = ["pytest>=7.0.0"]

[project.urls]
"Homepage" = "https://github.com/maximerivest/onetoken"
"Bug Tracker" = "https://github.com/maximerivest/onetoken/issues"
"Documentation" = "https://github.com/maximerivest/onetoken#readme"
"Source Code" = "https://github.com/maximerivest/onetoken"

[tool.setuptools]
packages = ["onetoken"]

[tool.black]
line-length = 88
target-version = ["py38"]

[tool.isort]
profile = "black"
line_length = 88

[tool.pytest.ini_options]
testpaths = ["tests"] 